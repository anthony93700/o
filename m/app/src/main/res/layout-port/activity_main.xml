<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
	android:layout_height="match_parent" android:orientation="vertical">

	<TextView android:id="@+id/textView1" 
	    android:layout_width="fill_parent"
		android:layout_height="match_parent" 
		android:layout_weight="0.5"/>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:orientation="horizontal"
		android:layout_weight="0.5"
		>

		<TableLayout
		    android:layout_weight="0.15"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:stretchColumns="*" >

			<TableRow android:gravity="center">			
				<Button android:id="@+id/bt_ac" android:text="@string/bt_ac" style="@style/bouton_calculatrice_chiffre_port" android:layout_span="2"/>
				<Button android:id="@+id/bt_backspace" android:text="@string/bt_backspace" style="@style/bouton_calculatrice_chiffre_port" />
			</TableRow>
		    		    
		    
		    
	

		</TableLayout>



	</LinearLayout>

</LinearLayout>
